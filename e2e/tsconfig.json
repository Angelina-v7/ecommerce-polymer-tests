{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "lib": ["DOM", "ESNext"],
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": false,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@pages/*": ["e2e/pages/*"],
        "@tests/*": ["e2e/tests/*"]
      }
    },
    "include": [
      "e2e/pages/**/*.ts",
      "e2e/tests/**/*.ts",
      "playwright.config.ts"
    ],
    "exclude": ["node_modules", "dist"]
  }
  